<?xml version="1.0" ?>
<Node name="root" dt="0.05" showBoundingTree="0" gravity="0 0 0">

	<RequiredPlugin name="Carving" pluginName="SofaCarving" />
    <RequiredPlugin name="Geomagic plugin" pluginName="Geomagic" />

    <CollisionPipeline name="pipeline" depth="6" verbose="0"/>
    <BruteForceDetection name="detection" />
    <CollisionResponse name="response" response="FrictionContact" />
    <LocalMinDistance name="proximity" alarmDistance="0.5" contactDistance="0.1" angleCone="0.0" />
    <FreeMotionAnimationLoop/>
    <LCPConstraintSolver tolerance="0.001" maxIt="1000"/>
    <CollisionGroup />

    <Node name="OmniControler">
        <GeomagicDriver name="GeomagicDevice" deviceName="Default Device" scale="1" drawDeviceFrame="0" 
		positionBase="0 0 0" drawDevice="0" orientationBase="0 0.7071 0 0.7071" manualStart="true" />
        <MechanicalObject name="ms" template="Rigid" position="@GeomagicDevice.positionDevice" free_position="@GeomagicDevice.positionDevice" showObject="0" showObjectScale="0" scale3d="1 1 1"/>
    </Node>
	
    <CarvingManager active="@OmniControler/GeomagicDevice.button1" carvingDistance="0.2" key="k" />
