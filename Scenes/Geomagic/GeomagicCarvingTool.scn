	<Node name="Cylinder">
        <EulerImplicitSolver name="cg_odesolver"  />
        <CGLinearSolver name="linear solver" iterations="25" tolerance="1e-09" threshold="1e-09" />
        <MeshGmshLoader filename="./mesh/cylinder.msh" name="meshLoader" scale="6" rotation="-90 0 0" translation="0 0 -2"/>
        <MechanicalObject name="dofs" src="@meshLoader" />
		<TetrahedronSetTopologyContainer name="TetraContainer" src="@meshLoader" />
        <TetrahedronSetTopologyModifier name="Modifier" />
        <TetrahedronSetTopologyAlgorithms template="Vec3d" name="TopoAlgo" />
        <TetrahedronSetGeometryAlgorithms template="Vec3d" name="GeomAlgo" drawTetrahedra="0" />

        <DiagonalMass massDensity="0.01" />
        <BoxROI name="box" box="-10 -0.5 -6 10 0.5 4" drawBoxes="true" />
		<FixedConstraint  name="FixedConstraint" indices="@box.indices" />
        <TetrahedralCorotationalFEMForceField name="FEM" youngModulus="300" poissonRatio="0.3" method="large" />

        <PrecomputedConstraintCorrection recompute="0"/>

        <Node name="T1">
			<TriangleSetTopologyContainer  name="TriContainer1" fileTopology="" tags=" " />
			<TriangleSetTopologyModifier   name="TriModifier1" />
			<TriangleSetTopologyAlgorithms name="TriTopoAlgo1" template="Vec3d" />
			<TriangleSetGeometryAlgorithms name="TriGeomAlgo1" template="Vec3d" />
            <Tetra2TriangleTopologicalMapping input="@../TetraContainer" output="@TriContainer1" flipNormals="1" noNewTriangles="1"/>
            <TriangleSet tags="CarvingSurface" />
            <Node name="Visu1">
                <OglModel name="Visual" color="blue" />
                <IdentityMapping input="@../" output="@Visual" />
            </Node>
        </Node>
    </Node>

	
	<Node name="Omni">
        <MechanicalObject template="Rigid" name="DOFs" position="@OmniControler/GeomagicDevice.positionDevice"/>
        <MechanicalStateController template="Rigid" listening="true" mainDirection="-1.0 0.0 0.0" handleEventTriggersUpdate="true"/>
        <Node name="RefModel">
            <MeshObjLoader filename="./mesh/drill_collision.obj"  name="loader"/>
            <Mesh src="@loader"  />
            <MechanicalObject src="@loader" name="instrumentCollisionState" ry="-180" rz="-90" dz="3.5" dx="-0.3" />
            <RigidMapping />
        </Node>
    </Node>

    <Node name="Instrument" >
        <EulerImplicitSolver name="ODE solver" rayleighStiffness="0.5" rayleighMass="1.0" />
        <CGLinearSolver name="linear solver" iterations="25" tolerance="1e-10" threshold="10e-10" /> 
        <MechanicalObject name="instrumentState" position="@OmniControler/GeomagicDevice.positionDevice" template="Rigid" />
        <UniformMass name="mass" totalMass="0.005" />
        <LCPForceFeedback activate="true" forceCoef="0.5"/>
        <UncoupledConstraintCorrection/>
		
        <Node name="CollisionModel" >
            <MeshObjLoader filename="./mesh/drill_collision.obj"  name="loader"/>
            <Mesh src="@loader" name="InstrumentCollisionModel" />
            <MechanicalObject src="@loader" name="instrumentCollisionState"  ry="-180" rz="-90" dz="3.5" dx="-0.3" />
            <Line name="instrument" contactStiffness="10"/>			
            <Point name="instrument" contactStiffness="10"/>
			<SphereModel radius="0.02" contactStiffness="10" tags="CarvingTool"/>
            <RigidMapping name="MM->CM mapping" input="@instrumentState" output="@instrumentCollisionState" />		
        </Node>
		
        <VectorSpringForceField  template="Vec3d" object1="@Omni/RefModel/instrumentCollisionState" object2="@Instrument/CollisionModel/instrumentCollisionState" stiffness="1000000" viscosity="0.5" />
    </Node>
	

</Node>
